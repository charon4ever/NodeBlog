//- admin-user-new.jade
extends ../layout
block append content
	div#content.content-admin
		p 添加用户
			a(href='/admin/').btn.btn-primary.btn-sm.pull-right 返回用户列表
		form(role="form", method='post', action='/admin/user-new')
			div.form-group
				label(for='user-nikename') 用户昵称
				input(type='text', name='nikename', placeholder='请输入昵称').form-control#user-nikename
			div.form-group
				label(for='email') 邮箱
				input(type='text', name='email', placeholder='请输入邮箱').form-control#user-email
			div.form-group
				label(for='user-description') 描述
				textarea(rows='3', name='description', placeholder='请输入描述').form-control
			button(type='submit').btn.btn-primary 提交
